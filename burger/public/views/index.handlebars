<div class = "container">
  <div class = "row">
    <div class = "col-md-4"></div>
      <div class = "col-md-4">
          <img src="../public/assets/img/cheeseburger.png" alt = "cheeseburger_with_fries_and_shake">
      </div>
    <div class = "col-md-4"></div>
  </div>
  <div class = "row">
    <div class = "col-md-6">
      <h1>Burgers</h1>
      <ul>
        {{#each burger}}
          {{#unless devoured}}
              <p class = "not-devoured">
                {{this.burger_name}}

                <form action="/" method="POST">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <button type="submit">Devour It!</button>
                </form>
              </p>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class = "col-md-6">
      <h1>Devoured Burgers</h1>
      <ul>
        {{#each burger}}
          {{#if devoured}}
            <li>
              <p class = "devoured">
                {{this.burger_name}}
              </p>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form method="POST" action="/" class="button-size">
  	<textarea type="text" name="burger" id = "burger-name"></textarea>
  	<button type="submit" class = "submit">Save Burger!</button>
  </form>
</div>

